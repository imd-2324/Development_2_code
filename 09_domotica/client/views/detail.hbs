<header>
    <a href="/"><i class="fal fa-arrow-left"></i></a>
    <h1><i class="fal fa-{{ room.icon }}"></i> {{ room.name }}</h1>
</header>
<div class="buttonlist">
  {{#each buttons as |button|}}
    <a href="#" data-id="{{button._id}}" {{#if button.status }}class="active"{{/if}}><i class="fal fa-{{ button.icon }}"></i> <span>{{ button.name }}</span></a>
  {{/each}}
</div> 